[Unit]
Description=zfix.org docker application service
After=docker.service
Requires=docker.service

[Service]
ExecStartPre=-/usr/bin/docker-compose -f {{REPO_PATH}}/applications/%i/docker-compose.yml build --pull
ExecStart=/usr/bin/docker-compose -f {{REPO_PATH}}/applications/%i/docker-compose.yml up

[Install]
WantedBy=multi-user.target